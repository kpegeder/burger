<header class = "burger-header">
<h1>Burgers!</h1>
</header>

<div class = "img-tag">
  <img src = "/assets/img/burger1.jpeg"
  alt = "Burger picture"
  class = "burger-img">
</div>

<div class = "row justify-content-center">
  <div class = "col-sm-4">
    <h2>Burgers to EAT!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block eaten=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class = "col-sm-4">
    <h2>Burgers EATEN!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block eaten=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class = "row justify-content-center">
  <div class = "col col-sm-3">
    <h2>Hunger for a Burger</h2>
    <form class = "create-form">

      <div class = "form-group">
        <label for = "burg">Burger Name:</label>
        <input type = "text" id = "burg" name = "name">
      </div>

      <button type = "submit">ADD BURGER</button>
    </form>
  </div>
</div> 